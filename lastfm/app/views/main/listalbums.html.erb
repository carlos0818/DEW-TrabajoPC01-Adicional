<%= render 'formlistalbums' %>

<h1> Lista Albumes </h1>
<% @album.each  do |alb| %>
    <% @hasta = alb[1]['opensearch:itemsPerPage'] %>
<% end %> 
<% @hasta.to_i %>
<table >
  <tr>
    <th>.:: Img ::.</th>
    <th>.:: Album ::.</th>
    <th>.:: Artista ::.</th>
  </tr>
<% i = 0 %>
<% num = @hasta.to_i %>
<% begin %>
  <% @album.each  do |alb| %>
   <tr>     
    <td><img src="<%= alb[1]['albummatches']['album'][i]['image'][0]['#text'] %>"  WIDTH=60 HEIGHT=80 /></td>
    <td><%= alb[1]['albummatches']['album'][i]['name'] %></td>
    <td><%= alb[1]['albummatches']['album'][i]['artist'] %></td>    
  </tr>
   <% end %> 
<% i +=1 %>
<% end while i < num %>
</table>
<%= "Hay " + @hasta + " registros encontrados" %>
